@model CRUDMVC.Models.Cliente;
@{
    ViewData["Title"] = "Cliente";
    var clientes = ViewData["clientes"] as List<Cliente>;
}
<h1>Gerenciamento de Clientes da ByAir</h1>
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2>Clientes Cadastrados</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Email</th>
                        <th>Sexo</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var cliente in clientes)
                        {
                            <tr>
                                <td>@cliente.Id</td>
                                <td>@cliente.Nome</td>
                                <td>@cliente.CPF</td>
                                <td>@cliente.Email</td>
                                <td>@cliente.Sexo</td>
                                <td>
                                <form asp-controller="Cliente" asp-action="Deletar">
                                    <button class="btn btn-danger" type="submit">x deletar</button>
                                    <input asp-for="Id" style="visibility:hidden;" type="text" value="@cliente.Id">
                                </form>
                                </td>
                           </tr>
                        }
                    }
                </tbody>
            </table>
            
            <h2>Cadastrar Clientes da ByAir</h2>
            <form asp-controller="Cliente" asp-action="Index">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="">Nome completo</label>
                        <input asp-for="Nome" type="text" class="form-control" id="" placeholder="Digite seu nome">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">CPF</label>
                        <input asp-for="CPF" maxlength="11" type="text" class="form-control" id="" placeholder="00000000000000">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Email</label>
                        <input asp-for="Email" type="text" class="form-control" id="">
                    </div>
                      <div class="form-group col-md-6">
                        <label for="">Sexo</label>
                        <input asp-for="Sexo" type="text" class="form-control" id="" placeholder="M ou F">
                    </div>
                   
                </div>
                 <button type="submit" class="btn btn-primary">Incluir</button>
            </form>
            <br />
            <br />
            <hr />
           
           <h2>Atualizar Clientes da BayAir</h2>
            <form asp-controller="Cliente" asp-action="Atualizar">

                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="">Código do cliente</label>
                        <select class="custom-select" asp-for="Id">
                            <option selected>-- Selecione um código</option>
                            @{
                                foreach (var cliente in clientes)
                                {
                                    <option>@cliente.Id</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Nome</label>
                        <input asp-for="Nome" type="text" class="form-control" id="" placeholder="">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">CPF</label>
                        <input asp-for="CPF" maxlength="11" type="text" class="form-control" id="" placeholder="00000000000000">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">Email</label>
                        <input asp-for="Email" type="text" class="form-control" id="">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">Sexo</label>
                        <input asp-for="Sexo" type="text" class="form-control" id="" placeholder="M para Masculino, e F para Feminino.">
                    </div>
                      </div>
                <button type="submit" class="btn btn-primary">Atualizar</button>
            </form>




        </div>
    </div>
</div>